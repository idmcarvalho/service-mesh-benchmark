# Service Mesh Benchmark API Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://benchmark:benchmark@localhost:5432/service_mesh_benchmark

# API Configuration
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# Optional: Override default paths
# RESULTS_DIR=/custom/path/to/results
# EBPF_PROBE_DIR=/custom/path/to/ebpf-probes

# Kubernetes Configuration
# KUBECONFIG=/path/to/kubeconfig
