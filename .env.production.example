# Service Mesh Benchmark - Production Environment Configuration
# Copy this file to .env.production and update with your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# API Configuration
ALLOWED_ORIGINS=http://your-oracle-cloud-ip:3000,https://your-domain.com

# Frontend Configuration
API_URL=http://your-oracle-cloud-ip:8000

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here
GRAFANA_URL=http://your-oracle-cloud-ip:3001

# Optional: Kubernetes Configuration
# KUBECONFIG=/path/to/kubeconfig
