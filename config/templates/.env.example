# Service Mesh Benchmark - Environment Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_DB=benchmark_results
POSTGRES_USER=benchmark_user
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://benchmark_user:changeme@postgres:5432/benchmark_results

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO

# Kubernetes Configuration
KUBECONFIG=/path/to/kubeconfig
K8S_NAMESPACE=benchmark

# eBPF Configuration
EBPF_ENABLED=true
EBPF_METRICS_PORT=9090

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_PASSWORD=changeme

# Cloud Provider Configuration (Oracle Cloud)
OCI_TENANCY_OCID=
OCI_USER_OCID=
OCI_FINGERPRINT=
OCI_KEY_FILE=/path/to/oci_api_key.pem
OCI_REGION=us-ashburn-1
OCI_COMPARTMENT_OCID=

# Benchmark Configuration
BENCHMARK_DURATION=300
BENCHMARK_CONNECTIONS=100
BENCHMARK_THREADS=4
BENCHMARK_RESULTS_DIR=/results
