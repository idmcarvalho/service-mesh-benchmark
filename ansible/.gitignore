inventory/hosts.yml
inventory/*.yml
inventory/*.yaml
!inventory/.gitkeep

# Retry files
*.retry

# Vault password files
.vault_pass
.vault_password
vault_pass.txt

# Temporary files
*.tmp
*.temp
.DS_Store

# Logs
*.log

